---
import ThemeIcon from '@components/ThemeIcon.astro';
import { SITE_TITLE } from '../consts';
---

<header class="bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-700 shadow-sm md:fixed md:top-0 md:left-0 md:right-0 z-50">
	<nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex flex-col sm:flex-row items-center justify-between gap-4">
		<!-- Logo -->
		<h2 class="text-2xl font-bold text-gray-900 dark:text-white">
			<a href="/" class="hover:text-indigo-600 dark:hover:text-indigo-400 transition">{SITE_TITLE}</a>
		</h2>

		<!-- Internal Links -->
		<div class="flex space-x-6 text-sm font-medium text-gray-700 dark:text-gray-300">
			<a href="/" class="hover:text-indigo-600 dark:hover:text-indigo-400 transition">Home</a>
			<a href="/blog" class="hover:text-indigo-600 dark:hover:text-indigo-400 transition">Blog</a>
			<a href="/about" class="hover:text-indigo-600 dark:hover:text-indigo-400 transition">About</a>
		</div>

		<ThemeIcon />
	</nav>
</header>
